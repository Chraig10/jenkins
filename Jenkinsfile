pipeline {
  agent any
  stages {
    stage('Tests') {
      steps {
        echo 'Début message test'
        sleep 30
        echo 'Fin message test'
      }
    }

    stage('Build') {
      steps {
        echo 'Début message build'
        sleep 30
        echo 'Fin du message build'
      }
    }

    stage('Deploy') {
      steps {
        echo 'Début message deploy'
        sleep 30
        echo 'Fin message deploy'
      }
    }

  }
}